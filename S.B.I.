class player():
    def __init__(self, nome, classe):
        
        nome = input('Qual seu Nome?')
        self.nome = nome
        return nome
        
        classe = input('Qual sua Classe?')
        self.classe = classe
        return classe
                     

class novoPlayer():
    def nP(self, nomeN, classeN):
        self.nomeN = nome
        self.classeN = classe
        return ('Nome do jogador:%s, Classe do Jogador:%s') %(self.nomeN,self.classeN)

